Хувилбар 1.
DECLARE Employee Ажилтан төрөлтэй лист зарлах
SET Employee = УБ сервер дах ажилчдын оноох
DECLARE selectedEmployee Ажилтан төрөлтэй лист зарлах


FOR Employee-н ажилчин бүрийн хувьд DO
  IF нас >=35 and хүйс == эрэгтэй THEN
      selectedEmployee нэмэх
  ENDIF
DONE

FUNCTION transferUlaanbaatarToDarkhan(selectedEmployees)
   DECLARE toRemove<Ажилтан>
   FOR selectedEmployees-н ажилчин бүрийн хувьд DO
       IF Улаанбаатар сервер (ажилчин) байвал THEN
       	toRemove<Ажилтан>.ADD (ажилчин)
       ENDIF
   DONE

   FOR toRemove-н ажилчин бүрийн хувьд DO
      Улаанбаатар сервер дэх ажилчдаас ажилчин DELETE ;
      Дархан сервер дэх ажилчдад ажилчин-ийг нэмэх ;
   DONE
END funcion




Хувилбар 2.
DECLARE Employee Ажилтан төрөлтэй лист 
SET Employee = УБ сервер дах ажилчдын оноох
DECLARE selectedEmployee Ажилтан төрөлтэй лист 

FUNCTION transferUlaanbaatarToDarkhan(Employee)
   DECLARE toRemove<Ажилтан>
   FOR selectedEmployees-н ажилчин бүрийн хувьд DO
       IF Улаанбаатар серверт (ажилчин) байвал THEN
       	toRemove листэд нэмэх
       ENDIF
   DONE

   FOR toRemove-н ажилчин бүрийн хувьд DO
      Улаанбаатар сервер дэх ажилчдаас ажилчин устгах ;
      Дархан сервер дэх ажилчдад ажилчин-ийг нэмэх ;
   DONE
END funcion

DECLARE Employee2 Ажилтан төрөлтэй лист 
SET Employee = Дархан сервер дах ажилчдын оноох

FOR Employee2-н ажилчин бүрийн хувьд DO
  IF нас >=35 and хүйс == эрэгтэй THEN
     ажилчин хэвлэх
  ELSE 
     selectedEmployee нэмэх
  ENDIF
      
DONE

FUNCTION transferDarkhanToUlaanbaatar(selectedEmployees)
   DECLARE toRemove Ажилтан төрөлтэй лист
   FOR selectedEmployees-н ажилчин бүрийн хувьд DO
       IF Дархан серверт (ажилчин) байвал THEN
       	toRemove листэд нэмэх
       ENDIF
   DONE

   FOR toRemove-н ажилчин бүрийн хувьд DO
      Дархан сервер дэх ажилчдаас ажилчин устгах ;
      Улаанбаатар сервер дэх ажилчдад ажилчин-ийг нэмэх ;
   DONE
END funcion


